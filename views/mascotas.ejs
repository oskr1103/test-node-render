<%- include("template/cabecera", {tituloPagina: "Bienvenidos"}) %>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nombre</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Accion</th>
      </tr>
    </thead>
    <tbody>
      <% if (arrayMascotas.length > 0) { %>
        <% arrayMascotas.forEach(mascotas => { %>

            <tr>
              <th scope="row"><%= mascotas.id %> </th>
              <td><%= mascotas.nombre %> </td>
              <td><%= mascotas.descripcion %> </td>
              <td>@mdo</td>
            </tr>

        <% }) %>
       
      <% } %>
      
    </tbody>
  </table>
  
</div>

<%- include("template/footer") %>
